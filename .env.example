# Application Configuration
APP_HOST=127.0.0.1
APP_PORT=9000
FRONTEND_PORT=3000

# Google Vision API (optional for enhanced OCR)
GOOGLE_VISION_API_KEY=

# MOSIP Configuration
MOSIP_MODE=mock  # Options: mock, live
MOSIP_BASE_URL=http://localhost:7000
MOSIP_CLIENT_ID=
MOSIP_SECRET=
MOSIP_TENANT=default

# Security
API_KEY=dev-api-key
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# Rate Limiting
RATE_LIMIT_PER_SECOND=3
RATE_LIMIT_PER_MINUTE=100

# OCR Configuration
OCR_ENGINES=easyocr,tesseract  # Comma separated: easyocr,tesseract,google_vision
DEFAULT_OCR_ENGINE=easyocr
OCR_CONFIDENCE_THRESHOLD=0.5

# Database (for mock MOSIP)
MOCK_DB_PATH=./mock_mosip/mock_db.sqlite

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/extractor.log

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:9000
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# File Upload Settings
MAX_UPLOAD_SIZE_MB=50
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf,tiff,bmp

# Quality Check Settings
QUALITY_CHECK_ENABLED=true
QUALITY_THRESHOLD_SCORE=70